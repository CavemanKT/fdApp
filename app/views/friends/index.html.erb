<% if @friends %>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to "Edit this friend", edit_friend_path(friend) %></td>
          <td><%= link_to 'Delete', friend, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
    <% end %>

  </tbody>
</table>
<br>

<%= link_to "New friend", new_friend_path, class:"btn btn-dark" %>

<div>

<nav id="navbar">
        <header class="doc-theme">JS Document</header>
        <ul>
          <% @users.each do |user| %>
            <li>
                <a class="nav-link main-section">
                  <%= user.email %>
                </a>
            </li>
          <% end%>
        </ul>
    </nav>
  
<h1 class="text-3xl font-bold underline">
    Hello world!
</h1>
</div>

<% end %>

