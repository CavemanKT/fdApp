<% if @friends %>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to "Edit this friend", edit_friend_path(friend) %></td>
          <td><%= link_to 'Delete', friend, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
    <% end %>

  </tbody>
</table>
<br>

<%= link_to "New friend", new_friend_path, class:"btn btn-dark" %>

<% end %>

<div>
  <h3>user list</h3>
  <% @user.each do |user| %>
  <ul>
    <li>
      <%= user.email %>
    </li>
  </ul>
</div>

<% if !@friends %>

  <h1>Nothing is here because I haven't figured out what to put.</h1>

<% end %>
