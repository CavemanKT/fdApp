<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group my-4">
    <%= f.email_field :email, class:"form-control mt-4", placeholder:"Email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group my-4">
    <%= f.password_field :password, class:"form-control mt-4", placeholder:"Password", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field my-4 form-check">
      <%= f.check_box :remember_me, id:"flexCheckDefault", class:"form-check-input" %>
      <%= f.label :remember_me, for:"flexCheckDefault", class:"form-check-label" %>
    </div>
  <% end %>

  <div class="actions my-3">
    <%= f.submit "Log in", class:"btn btn-dark"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
