<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group my-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class:"form-control mt-1", :disabled => true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group my-4">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, class:"form-control mt-1" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  
  <div class="field form-group my-4">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"form-control mt-1" %>
  </div>

  <div class="field form-group my-4">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, class:"form-control mt-1" %>
  </div>

  <div class="actions my-4">
    <%= f.submit "Update", class:"btn btn-dark" %>
  </div>
<% end %>

<p>Unhappy for the account? <%= button_to "Cancel my account", registration_path(resource_name), data: { turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>

<%= link_to "Back", :back %>
